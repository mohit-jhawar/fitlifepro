                                "value": "Bearer {{access_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/plans/:planId",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "plans",
                                ":planId"
                            ],
                            "variable": [
                                {
                                    "key": "planId",
                                    "value": "REPLACE_WITH_PLAN_ID"
                                }
                            ]
